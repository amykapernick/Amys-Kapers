---
import Layout from "@layouts/default";

const content = {
	title: "Get in Touch | Amy Kapernick",
	description: "Get in Touch with Amy",
	class: "header_reduced",
};

const links = [
	{
		name: "Twitter",
		url: "https://twitter.com/amys_kapers",
	},
	{
		name: "Mastadon",
		url: "https://hachyderm.io/@amys_kapers",
	},
	{
		name: "GitHub",
		url: "https://github.com/amykapernick/blog",
	},
	{
		name: "Modern Front End Fundamentals Workshop",
		url: "/front-end-fundamentals-workshop",
	},
	{
		name: "Accessibility for Everyone",
		url: "https://levelup.video/tutorials/accessibility-for-everyone",
	},
	{
		name: "Blog",
		url: "https://blog.amyskapers.dev",
	},
	{
		name: "Website",
		url: "https://amyskapers.dev",
	},
	{
		name: "Notist",
		url: "https://speaking.amyskapers.dev",
	},
];
---

<style>
	@import '@mixins';

	article {
		@include content;
	}

	ul {
		list-style: none;
		margin: 0 auto;
		padding: 0;
		max-width: 500px;
		text-align: center;
	}

	li {
		margin: 0 0 1px;
		padding: 0;

		&:nth-child(2n) {
			a {
				background: none;
			}
		}
	}

	a {
		display: block;
		padding: 10px;
		background: rgba($purple_bright, 0.2);
	}
</style>

<Layout content={content} header="reduced">
	<article>
		<h1>Links</h1>
		<ul>
			{
				links.map((link) => (
					<li>
						<a
							href={link.url}
							target={
								link.url.startsWith("/") ? "_self" : "_blank"
							}
						>
							{link.name}
						</a>
					</li>
				))
			}
		</ul>
	</article>
</Layout>
