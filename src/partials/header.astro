---
import SVG from "../parts/svg.astro";
---

<style lang="scss">
	header {
	display: flex;
	position: relative;
	justify-content: center;
	padding: 20px 20px 50px;

	.cls-1 {
		fill: var.$neutral;
	}

	.logo {
		width: 80vw;
		max-width: 800px;
	}

	.hexagon {
		position: absolute;
		z-index: -1;
		bottom: 0;
		width: 120vw;
		color: var.$background;
	}

	.blob_2,
	.squiggle,
	.paw {
		display: none;
	}

	.blob_left {
		svg {
			color: var.$pink;
		}
	}

	.blob_right {
		svg {
			color: var.$green;
		}
	}

	.squiggle {
		color: var.$yellow;
	}

	.paw {
		color: var.$purple;
	}
}

.intro_section {
	position: relative;
	margin-bottom: 50px;
	padding: 0 20px;
	font-size: 1.5em;
	font-weight: 700;
	text-transform: uppercase;

	mark {
		background: none;
		color: var.$darkpurple;
	}

	.options {
		min-height: 3em;
		color: var.$darkpurple;

		li {
			&.an {
				&:before {
					color: var.$neutral;
				}
			}
		}
	}

	.image_blob {
		transform: scaleX(-1);

		path {
			color: var.$purple;
		}

		image {
			width: 100%;
			height: 100%;
			margin-bottom: -10%;
			clip-path: url('#_ImageBlobHeader');
		}
	}

	blockquote {
		max-width: 400px;
		margin: 20px auto;
	}

	.image {
		position: relative;
		max-width: 400px;
		margin: 0 auto;
		padding: 0 20px 50px;

		.blob_2 {
			display: block;
			position: absolute;
			z-index: -1;
			right: -20px;
			bottom: 0;
			width: 120%;
			transform: rotate(-50deg);
			color: var.$yellow;
		}
	}

	.blob_small {
		display: none;
		position: absolute;
		right: -50px;
		bottom: -50px;
		width: 100px;
		color: var.$pink;
	}
}
</style>

<header>
	<SVG name="graphics/blob_hexagon.svg" />

	<span class="blob_left">
		<SVG name="graphics/blob_2.svg" />
	</span>

	<span class="blob_right">
		<SVG name="graphics/blob_2.svg" />
	</span>

	<SVG name="graphics/squiggle.svg" />

	<SVG name="graphics/paw.svg" />

	<a href="/"><SVG name="logo.svg" /></a>
</header>
